<main class="contenedor panel-administracion">
    <h1><%= nombrePagina %>

    <div class="contenedor-botones">
        <a href="/nuevo-grupo" class="btn btn-naranja"> Nuevo Grupo </a>

        <a href="/nuevo-meeti" class="btn btn-azul"> Nuevo Meeti </a>

        <a href="/editar-perfil" class="btn btn-rosa"> Editar Perfil </a>

        <a href="/imagen-perfil" class="btn btn-naranja"> Imagen Perfil </a>
        
    </div>

    <div class="seccion-admin">
        <h2> Próximos Meeti's </h2>
        <% if(meeti.length > 0) { %>
            <ul>
                <% meeti.forEach(meet => { %>
                    <li>
                        <div class="informacion-admin">
                            <% moment.locale('es') %>
                            <% const fecha = moment(meet.fecha + ' ' + meet.hora).format('LLLL') %> 
                            <p class="fecha"><%= fecha %></p>
                            <h3><%= meet.titulo %></h3>
                            <small><%= meet.interesados.length %> Interesados</small>
                        </div>

                        <div class="acciones contenedor-botones">
                            <a href="/editar-meeti/<%= meet.id %>" class="btn btn-verde"> Editar</a>
                            <a href="/asistentes-meeti/<%= meet.id %>" class="btn btn-azul2">Asistentes</a>
                            <a href="/eliminar-meeti/<%= meet.id %>" class="btn btn-rojo">Eliminar</a>
                        </div>
                    </li>   
                <% }) %>         
            </ul>
        <% } else { %>
            <p class="mensaje"> No tienes meetis aún </p>
        <% } %>
    </div>

    <div class="seccion-admin">
        <h2> Tus Grupos </h2> 
        <% if(grupos.length) { %>            
            <ul>
                <% grupos.forEach(grupo => { %>
                    <li>
                        <div class="informacion-admin">
                            <h3><%= grupo.nombre %></h3>
                        </div>

                        <div class="acciones contenedor-botones">
                            <a href="/editar-grupo/<%= grupo.id %>" class="btn btn-verde"> Editar</a>
                            <a href="/imagen-grupo/<%= grupo.id %>" class="btn btn-azul2">Imagen</a>
                            <a href="/eliminar-grupo/<%= grupo.id %>" class="btn btn-rojo">Eliminar</a>
                        </div>

                    </li> 
                <% }) %>           
            </ul>
        <% } else { %>
            <p class="mensaje"> No tienes grupos aún </p>
        <% } %>
    </div>

    <div class="seccion-admin">
        <h2> Meeti's Anteriores </h2>
        <% if(anteriores.length > 0) { %>
            <ul>
                <% anteriores.forEach(meet => { %>
                    <li>
                        <div class="informacion-admin">
                            <% moment.locale('es') %>
                            <% const fecha = moment(meet.fecha + ' ' + meet.hora).format('LLLL') %> 
                            <p class="fecha"><%= fecha %></p>
                            <h3><%= meet.titulo %></h3>
                            <small><%= meet.interesados.length %> Interesados</small>
                        </div>

                        <div class="acciones contenedor-botones">
                            <a href="/editar-meeti/<%= meet.id %>" class="btn btn-verde"> Editar</a>
                            <a href="/asistentes-meeti/<%= meet.id %>" class="btn btn-azul2">Asistentes</a>
                            <a href="/eliminar-meeti/<%= meet.id %>" class="btn btn-rojo">Eliminar</a>
                        </div>
                    </li>   
                <% }) %>         
            </ul>
        <% } else { %>
            <p class="mensaje"> No tienes Meeti's anteriores </p>
        <% } %>
    </div>
</main>